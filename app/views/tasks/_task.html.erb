<div id="<%= dom_id task %>" style="background-color: #2c2545; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.3); max-width: 600px;">
  <p>
    <strong style="color: #c7bfff;">Título:</strong>
    <%= task.title.presence || "—" %>
  </p>

  <p>
    <strong style="color: #c7bfff;">Descrição:</strong>
    <%= task.description.presence || "—" %>
  </p>

  <p>
    <strong style="color: #c7bfff;">Concluída:</strong>
    <%= task.done ? "✅ Sim" : "❌ Não" %>
  </p>
</div>

